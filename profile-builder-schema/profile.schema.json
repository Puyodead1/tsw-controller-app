{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "The name of this profile"
    },
    "extends": {
      "type": "string",
      "description": "The name of the profile to extend from. The profile inheritance happens on a control basis; if you have the control defined here it will not be resolved from the extended profile."
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The given name of this control (as calibrated)",
            "minLength": 1
          },
          "assignments": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "type": "object",
                  "properties": {
                    "conditions": {
                      "type": "array",
                      "description": "The conditions to apply to this assignment",
                      "items": {
                        "$ref": "./profile.assignment_condition.schema.json"
                      }
                    }
                  }
                },
                {
                  "oneOf": [
                    { "$ref": "./profile.momentary_assignment.schema.json" },
                    { "$ref": "./profile.toggle_assignment.schema.json" },
                    { "$ref": "./profile.linear_assignment.schema.json" },
                    {
                      "$ref": "./profile.direct_control_assignment.schema.json"
                    },
                    { "$ref": "./profile.api_control_assignment.schema.json" },
                    { "$ref": "./profile.sync_control_assignment.schema.json" }
                  ]
                }
              ]
            }
          }
        },
        "required": ["name", "assignments"]
      }
    }
  },
  "required": ["name", "controls"]
}
